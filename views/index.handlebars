<div class='collapse navbar-colllapse' id='navbar'>
    <ul class='nav navbar-nav'>
        <a class='navbar-brand'>NYT SCRAPPER</a>
        <li class='active'><a href='/'> Home <span class='sr-only'>(current)</span></a></li>
        <li><a href='/articlesaved'> Article Saved </a></li>
    </ul>
    <form action='/scrape' method='POST' class='navbar-form navbar-left'>
        <button type='submit' class='btn btn-info'> Scrape New Articles</button>
    </form>
</div>

<!--Main Container-->
<div class='container'>
    <div class='row'>
        <div class='col-md-12'>
            <div class='jumbotron'>
                <div class='pictureText'> The New York Times Scraper</div>
            </div>
        </div>
    </div>


    <div class='col-md-12'>
        {{#if articles}}
        {{#each articles}}
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h4>{{this.title}}</h4>
            </div>
            <div class='panel-body'>
                <form action='/save' method='POST'>
                    <input id='article-title' type='hidden' name='title' value='{{this.title}}'>
                    <input id='article-link' type='hidden' name='link' value='{{this.link}}'>
                    <p> {{this.summary}}</p>
                    <br>
                    <button type='submit' class='btn btn-success pull-right'> Save Articles</button>
                </form>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class='panel panel-default'>
            <div class='panel-body'>
                <h4> We don't have any new articles</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>